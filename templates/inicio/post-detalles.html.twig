{% extends 'base.html.twig' %}

{% block title %} {{parent()}} {% endblock %}

{% block body %}
{{ parent() }}
<div class="container">
    <div class="row">
        <div class="col-md-2">
            
        </div>
        <div class="col-md-8">

        <br><br><br><br>     
        <div class="card mb-10 post" style="max-width: 100%;box-shadow: 0px 10px 10px 0px rgba(0, 0, 0, 0.2);">
  
            <div class="row no-gutters">
                <div class="col-md-3" style="margin-left: 1.2%;">
                                        
                    
                    <p> {{post.fecha | date}}<br>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                            <div class="card-body">
                                <a href="#"><h4 class="card-title">{{post.titulo}}</h4></a>
                                        
                                <div class="alert alert-success tipo" role="alert" style="width:  25.5%; height:50px; text-aling:center">
                                    <h6 class="tituloTipo">{{post.tipo}}<h6>
                                </div>        
                                    <p class="card-text"><b>{{post.descripcion}}</b></p>    
                                    {% if post.archivo != null %}
                                    <img class="card-img-top imagen" style="width:250px; heigth:250px" src={{asset('uploads/files/' ~ post.archivo) }} alt="">
                                    {% endif %}
                             
                            </div>

                    </div>

                </div>
            </div>
            <br>                       
        </div>
        <hr>
            <div class="card text-start">
              <div class="card-body">
                {{ form(form) }}
              </div>
            </div>
            <hr>
            
            {{ dump(comentarios) }}
                        
            
        </div>

        
    </div>
</div>
{% endblock %}